{
    "compilerOptions": {
        "baseUrl": "./", 
        "outDir": "./dist/",
        
        "sourceMap": true,
        "removeComments": false, 
        
        "moduleResolution": "node", 
        "module": "esnext",
        "target": "es6",
        "jsx": "react", 

        "strict": true, 
        "noUnusedLocals": true, 
        "allowJs": true, 

        "esModuleInterop": true, 
        "isolatedModules": true
    },

    "awesomeTypescriptLoaderOptions": {
        "useCache": true, 
        "useBabel": true, 
        "babelCore": "@babel/core"
    }, 
    
    "include": [
        "./src/**/*"
    ], 
    "exclude": [
        "node_modules"
    ]
}