{
    "compilerOptions": {
        "baseUrl": "./", 
        "outDir": "./dist/",
        
        "sourceMap": true,
        "removeComments": false, 
        
        "moduleResolution": "node", 
        "resolveJsonModule": true,
        "module": "esnext",
        "target": "esnext",
        "jsx": "react", 

        "strict": true, 
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true, 
        "allowJs": true, 

        "esModuleInterop": true, 
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,

        "importHelpers": true,

        "typeRoots": ["src/Types/"]
    },

    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "src/**/*.{ts,tsx,json}",
            "assets/**/*.{json,txt}"
        ],
        "useCache": true, 
        "useBabel": true, 
        "babelCore": "@babel/core"
    }, 
    
    "include": [
        "./src/**/*",
        "./assets/**/*"
    ], 
    "exclude": [
        "node_modules",
        "build"
    ]
}