{
    "compilerOptions": {
        "baseUrl": "./src", 

        "outDir": "./dist/",
        "sourceMap": true,
        
        "moduleResolution": "node", 
        "module": "esnext",
        "target": "es6",
        "jsx": "react", 

        "strict": true, 
        "noUnusedLocals": true, 
        "allowJs": true
    },
    "include": [
        "./src/**/*"
    ], 
    "exclude": [
        "node_modules"
    ]
}